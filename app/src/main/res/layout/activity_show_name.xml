<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hoco.android_fegisteration_form.showNameActivity"
    android:background="#ffffff">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar">
    </include>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="you have logged in"
        android:id="@+id/logedInMessage"
        android:layout_below="@+id/timeLeft"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/timeLeft"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:layout_alignBottom="@+id/tool_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Profile"
        android:id="@+id/show_profile_button"
        android:layout_below="@+id/logedInMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:onClick="goToShowProfileActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/edit_profile_button"
        android:onClick="goToEditProfileActivity"
        android:layout_alignTop="@+id/show_profile_button"
        android:layout_toRightOf="@+id/show_profile_button"
        android:layout_toEndOf="@+id/show_profile_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR button"
        android:id="@+id/QR_button"
        android:layout_below="@+id/show_profile_button"
        android:layout_alignRight="@+id/edit_profile_button"
        android:onClick="QROnClick"
        android:layout_alignEnd="@+id/edit_profile_button" />
</RelativeLayout>
